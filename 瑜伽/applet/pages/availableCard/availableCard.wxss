/* pages/availableCard/availableCard.wxss */
.container {
  padding: 24rpx;
  box-sizing: border-box;
}

.card-item {
  margin-bottom: 24rpx;
  color: #986424;
  position: relative;
}


.card-item .card-bg {
  width: 702rpx;
  height: 160rpx;
}

.card-item .card-content {
  width: 702rpx;
  height: 160rpx;
  position: absolute;
  top: 0;
  padding: 20rpx 44rpx 20rpx 24rpx;
  box-sizing: border-box;
  color: #986424;
}

.card-item .card-title {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  line-height: 50rpx;
  margin-bottom: 10rpx;
}

.card-item .cardname {
  display: flex;
  align-items: flex-start;
  font-size: 32rpx;
  width:460rpx ;
  font-weight: 400;
  line-height: 40rpx;
}

.card-item .card-type {
  width: 104rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  flex-shrink: 0;
  background: #FF9387;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.card-item .balance {
  font-size: 46rpx;
  color: #fff;
}

.card-item .unit {
  font-size: 24rpx;
  margin-left: 20rpx;
}

.card-item .card-validate {
  display: flex;
  justify-content: space-between;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
}

.use_day {
  color: #986424;
  font-size: 24rpx;
}