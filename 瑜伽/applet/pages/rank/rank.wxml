<!--pages/rank/rank.wxml-->
<view class="container">
  <view class="common-relative">
      <image class="vip-card-bg" src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/system/applet/20210902/icon_sign_bg_1.png"></image>
      <view class="back common-fixed" style="top:{{statusBarHeight + 2}}px" bindtap="back"><image src="../../imgs/arrow-r.png"></image></view>
      <view class="myVipCardTitle color-white" style="top:{{statusBarHeight + 8}}px">实时榜单</view>
      <image class="rank-top" src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/images/20210906/18f497018683514664b0f63e7f06593e.png"></image>
      <view class="header">
          <view class="top">
            <view class="top-item second">
              <image class="rank-icon" src="{{sign[2]}}"></image>
              <image class="head-img" bindtap="handelBox" data-level="1" data-times="{{list1[1].times}}" src="{{list1[1].head_img}}"></image>
              <view class="name">{{list1[1].nickname}}</view>
              <!-- <view class="like-it" bindtap="give_like" data-unionid="{{list1[1].unionid}}">为TA点赞</view> -->
              <view class="num" bindtap="give_like" data-unionid="{{list1[1].unionid}}">{{list1[1].givelike_num}} <image src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/images/20210830/a5ff264241ba99f6c543196b9b323734.png" class="like-icon"></image>
              </view>
            </view>
            <view class="top-item first">
              <image class="rank-icon" src="{{sign[1]}}"></image>
              <image class="head-img" bindtap="handelBox" data-level="0" data-times="{{list1[0].times}}" src="{{list1[0].head_img}}"></image>
              <view class="name">{{list1[0].nickname}}</view>
              <!-- <view class="like-it"  bindtap="give_like" data-unionid="{{list1[0].unionid}}">为TA点赞</view> -->
              <view class="num" bindtap="give_like" data-unionid="{{list1[0].unionid}}">{{list1[0].givelike_num}} <image src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/images/20210830/a5ff264241ba99f6c543196b9b323734.png" class="like-icon"></image>
              </view>
            </view>
            <view class="top-item three">
              <image class="rank-icon" src="{{sign[3]}}"></image>
              <image class="head-img" bindtap="handelBox" data-level="2" data-times="{{list1[2].times}}" src="{{list1[2].head_img}}"></image>
              <view class="name">{{list1[2].nickname}}</view>
              <!-- <view class="like-it"  bindtap="give_like" data-unionid="{{list1[2].unionid}}">为TA点赞</view> -->
              <view class="num" bindtap="give_like" data-unionid="{{list1[2].unionid}}">{{list1[2].givelike_num}}<image src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/images/20210830/a5ff264241ba99f6c543196b9b323734.png" class="like-icon"></image>
              </view>
            </view>
          </view>
        </view>
  </view>
 
  <view class="rank">
    <view class="rank-item" wx:for="{{list2}}" wx:for-item="it" wx:key='index'>
      <view class="rank-l">
        <view>{{index+4}}</view>
        <image src="{{it.head_img}}" class="head-pic"></image>
        <view class="rank-info">
          <view class="user-name">{{it.nickname}}</view>
          <view class="clock-num color-66">本月打卡{{it.times}}次</view>
        </view>
      </view>
      <view class="rank-r">
        <!-- <view class="like-it"  bindtap="give_like" data-unionid="{{it.unionid}}">为TA点赞</view> -->
        <view class="num" bindtap="give_like" data-unionid="{{it.unionid}}">{{it.givelike_num}} <image src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/system/applet/20210902/icon_sign_tap.png" class="like-icon"></image>
        </view>
      </view>
    </view>

