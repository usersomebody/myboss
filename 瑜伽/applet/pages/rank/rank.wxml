  </view>
  <view class="tips">注意:仅显示前10名</view>
</view>
<view class="my-self-rank" wx:if="{{my.index > 10}}">
  <view class="rank-item">
    <view class="rank-l">
      <view>{{my.index}}</view>
      <image src="{{my.info.head_img}}" class="head-pic"></image>
      <view class="rank-info">
        <view class="user-name">{{my.info.nickname}}</view>
        <view class="clock-num color-66">本月打卡{{my.info.times}}次</view>
      </view>
    </view>
    <view class="rank-r">
      <view class="num" bindtap="give_like" data-unionid="{{my.info.unionid}}">{{my.info.givelike_num}} <image src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/system/applet/20210902/icon_sign_tap.png" class="like-icon"></image>
      </view>
    </view>
  </view>
</view>
<view style="background:rgba(0,0,0,.5);" class="overlayer {{showOverlayer ? 'show' : ''}}"></view>
<view class="user-sign-info" wx:if="{{showOverlayer}}">
  <view class="ranking-content">
      <image class="info-bg" src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/system/applet/20210902/icon_sign_check.png"></image>
      <view class="top">{{shadowBox.ranking}}</view>
      <view class="info-content">
        <view class="avatar"> 
            <image class="user-avatar {{shaodw.className}}" src="{{shadowBox.avatar}}"></image>
            <image class="user-rank-sign" src="{{shadowBox.sign}}"></image>
        </view>
        <view class="nums color-333 text-center">本月打卡<text class="base-must-color">{{shadowBox.num}}</text>次</view>
        <view class="btnName" bindtap="handelBox">{{shadowBox.btnName}}</view>
      </view>
  </view>
</view>