/* pages/rank/rank.wxss */
.container {
  position: relative;
  padding-bottom: 10vh;
  background:#FFFFFF;
}

.rank-bg {
  width: 750rpx;
  height: 740rpx;
  background: linear-gradient(180deg, #21DBC3 0%, #9DF6EB 100%);
}

.header {
  width: 100%;
  position: absolute;
  top: 100rpx;
  text-align: center;
}

.title-bg {
  width: 498rpx;
  height: 92rpx;
  margin: 48rpx auto 16rpx;
}

.time {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
}

.top {
  display: flex;
  justify-content: space-between;
  margin-top: 100rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.top-item {
  width: 160rpx;
  position: relative;
}

.second {
  margin-top: 56rpx;
}
.second .head-img{
  border:4rpx solid #C8D1DF;
}
.second .name{
  margin-top:24rpx;
}
.three {
  margin-top: 66rpx;
}
.three .head-img{
  border:4rpx solid #ECC498;
}
.three .name{
  margin-top:10rpx;
}
.first .head-img{
  width:146rpx;
  height:146rpx;
  border:4rpx solid #FFF665;
}
.first .name{
  margin-top:28rpx;
}
.rank-icon {
  width: 72rpx;
  height: 56rpx;
  position: absolute;
  left: 0;
  right:0;
  top: -37rpx;
  margin:0 auto;
}

.head-img {
  width: 120rpx;
  height: 120rpx;
  background: #FFFFFF;
  border-radius: 50%;
  margin: 0 auto;
}

.top-item .name {
  width: 100%;
  font-size: 32rpx;
  color: #333333;
  /* margin: 10rpx 0 24rpx; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}

.like-it {
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 2rpx solid #FFF1EF;
  background: linear-gradient(180deg, #FF9387 0%, #FF9387 100%);
  border-radius: 38rpx;
  font-size: 26rpx;
  color: #FFFFFF;
}

.num {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #9580FF;
  margin-top: 4rpx;
}

.like-icon {
  width: 26rpx;
  height: 22rpx;
  margin-left: 26rpx;

}

.rank {
  background: #FFFFFF;
  margin-top: -44rpx;
  /* position: relative; */
  z-index: 99;
  padding: 24rpx 48rpx;
  box-sizing: border-box;
  margin:0 30rpx;
  box-shadow: 0px 0px 7px rgba(186, 149, 255, 0.31);
}

.rank-item {
  padding: 26rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #E5E5E5;
}

.rank-item .rank-l {
  display: flex;
  align-items: center;
}

.my {
  margin-top: 40rpx;
  border: 2px solid #FF9387;
}

.rank-item .serial {
  width: 44rpx;
  height: 50rpx;
  font-size: 36rx;
  line-height: 50rpx;
  color: #333333;
  text-align: left;
}

.rank-item .head-pic {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin: 0 24rpx;
}

.user-name {
  height: 42rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #333333;
  margin-bottom:20rpx;
}

.clock-num {
  height: 36rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}

.rank-item .rank-r {
  text-align: center;
}

.dotted {
  width: 184rpx;
  margin: 16rpx auto 0;
  border-bottom: 8rpx dotted #9580FF;
}

.tips {
  height: 40rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #C7A9FF;
  text-align: center;
  margin-top: 24rpx;
}

.vip-card-bg{
  width:100%;
  height:510rpx;
}

.back{
  width:16rpx;
  height:28rpx;
  left:20rpx;
  z-index:99;
  padding:20rpx;
}

.back image{
  width:16rpx;
  height:28rpx;
  transform: rotate(180deg);
}

.myVipCardTitle{
  position: absolute;
  text-align: center;
  left:0;
  right:0;
  margin:0 auto;
}
.rank-top{
  position: absolute;
  bottom:0;
  left:0;
  right:0;
  margin:0 auto;
  width:690rpx;
  height:178rpx;
}

.user-sign-info{
  position: fixed;
  width:80%;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
  z-index:2001;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ranking-content{
  position: relative;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.info-bg{
  width:526rpx;
  height:623rpx;
}
.user-sign-info .top{
  position: absolute;
  top:66rpx;
  color:#fff;
  font-size:34rpx;
  margin:0 auto;
}
.user-sign-info .info-content{
  position: absolute;
  top:166rpx;
}
.user-sign-info .info-content .avatar{
  position: relative;
  display:flex;
  justify-content: center;
  align-items: center;
}
.user-sign-info .info-content .avatar .user-avatar{
  width:146rpx;
  height:146rpx;
  border-radius:50%;
}
.top-first{
  border:4rpx solid #FFF665;
} 
.top-second{
  border:4rpx solid #C8D1DF;
}
.top-three{
  border:4rpx solid #ECC498;
}
.user-rank-sign{
  position: absolute;
  top:-37rpx;
  width:70rpx;
  height:58rpx;
}
.info-content .nums{
  margin:28rpx auto 56rpx;
}
.info-content .btnName{
  padding:16rpx 76rpx;
  border:2rpx solid #9169FB;
  color:#9169FB;
  font-size:34rpx;
  border-radius:50rpx;
}
.my-self-rank{
  padding:0 7%;
  position: fixed;
  left:0;
  right:0;
  bottom:10rpx;
  width:78%;
  margin:0 auto;
  box-shadow: 0px 0px 7px rgba(186, 149, 255, 0.31);
  background:#fff;
}