/* 弹窗 */
.color-ea2{
    color:#EA2C1C;
}
.pay-fixed{
    position: fixed;
    left:0;
    top:0;
    right:0;
    bottom:0;
    margin:auto;
    z-index:2001;
    display:flex;
    flex-direction:column;
    justify-content: center;
    align-items: center;
}

.pay-box{
    position: relative;
    width:80%;
    background:#ffffff;
    padding:50rpx 30rpx;
    border-radius:30rpx;
}
.closebtn{
    position: absolute;
    right:30rpx;
    top:24rpx;
    width:30rpx;
    height:30rpx;
}
.group-box{
    width:70%;
    padding:58rpx 58rpx 44rpx;
}
.group-box .title{
    margin-bottom:10rpx;
}
.joinBtn{
    width:100%;
    height: 78rpx;
    line-height:78rpx;
    color:#fff;
    text-align: center;
    background: #E83926;
    border-radius: 11rpx;
}
.member{
    margin:26rpx 0 42rpx;
}
.member .avatar{
    width:20%;
    margin-bottom:20rpx;
}

.member .avatar image{
    width: 98rpx;
    height: 98rpx;
    border:1rpx solid #FF9D00;
    border-radius: 50%;
    opacity: 1;
}
.member .avatar.default image{
    border:1rpx dashed #CECECE;
}
.member .avatar image{
    width: 98rpx;
    height: 98rpx;
    border:1rpx solid #FF9D00;
    border-radius: 50%;
    opacity: 1;
}
.member-list .avatar.default image{
    border:1rpx dashed #CECECE;
}
.member-list .avatar image{
    width: 98rpx;
    height: 98rpx;
    border:1rpx solid #FF9D00;
    border-radius: 50%;
    opacity: 1;
}
.sign{
    position: absolute;
    left:0;
    top:0;
    width: 60rpx;
    height: 32rpx;
    line-height: 32rpx;
    color:#fff;
    background: #FF9D00;
    opacity: 1;
    border-radius: 16rpx;
    text-align: center;
}
.buy-btn{
    width: 270rpx;
    height: 90rpx;
    line-height:90rpx;
    color:#fff;
    text-align: center;
    background: #FF8477;
}
.buy-btn.group-price{
    flex:1;
    background:#E83926;
}

.member-list{
    margin-top:40rpx;
}
.member-list .avatar{
    margin-right:24rpx;
}
.group-status{
    padding-bottom:40rpx;
    background:#fff;
    margin-bottom:20rpx;
}
.group-status .group-time{
    padding:2rpx 42rpx;
}
.group-status .status{
    margin-bottom:10rpx;
    margin-top:40rpx;
}
.group-status .status-btn{
    width: 70%;
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    background: #E83926;
    border-radius: 11rpx;
    margin-top:40rpx;
}

.order-detail{
    padding:26rpx 30rpx;
    margin:20rpx 0;
}
.order-detail .title{
    margin-bottom:24rpx;
}
.margin-b-12{
    margin-bottom:12rpx;
}
.act-list{
    padding:20rpx 30rpx;
}
.act-list .title{
    margin-bottom:20rpx;
}
.act-list .list .item{
    margin-bottom:26rpx;
}
.act-list .list .item .left image{
    width:274rpx;
    height:154rpx;
    border-radius:10rpx;
    margin-right:24rpx;
}
.act-price{
    margin:20rpx 0 18rpx;
}
.color-ff9{
    color:#FF9D00;
}
.absolute-time{
    position: absolute;
    left: 0;
    top: 6rpx;
    right: 0;
    margin: 4rpx auto 0;

}
.group-time image{
    width:190rpx;
    height:52rpx;
}
.color-e83{
    color:#E83926;
}
/* 拼团头像列表 */
.group-avatar-list{
    width:70%;
}

.user-avatar-list{
    border-radius:16rpx;
    width:100%;
    background:#f7f7f7;
}
.group-master{
    background:#fff;
    padding:20rpx 0;
    border-radius:16rpx 16rpx 0 0;
    
}
.group-master .master-avatar{
    width:80rpx;
    height:80rpx;
    margin:0 auto;
}
.group-master .master-avatar image{
    width:80rpx;
    height:80rpx;
    border-radius: 50%;
    border:1rpx solid #999;
}
.group-master .master-name{
    margin:20rpx 0;
}
.user-list{
    padding:0 5%;
    width:90%;
    height:320rpx;
}
.user-list .user-item{
    margin-bottom:10rpx;
}
.user-list .user-item .user-info image{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    margin-right:20rpx;
}

.group-status .go-index-btn{
    background:#fff;
    color:#E83926;
    border: 1rpx solid #E83926;
    border-radius: 12rpx;
    margin-top:20rpx;
}

/* 抢购弹窗 */
.pay-box{
    position: relative;
    width:80%;
    background:#ffffff;
    padding:50rpx 30rpx;
    border-radius:30rpx;
}

.pay-box .title{
    margin-bottom:58rpx;
}

.pay-box .input-box{
    padding:26rpx 0;
    border-bottom:2rpx solid #E9E9E9;
    margin-bottom:20rpx;
}
.pay-box .code{
    position: relative;
    flex:1;
}

.pay-box .phone .label{
    display:block;
    width:20rpx;
    height:26rpx;
    margin-right:16rpx;
}

.pay-box .code .label{
    display:block;
    width:22rpx;
    margin-right:16rpx;
    height:28rpx;
}

.pay-box .nick-name .label{
    margin-right:16rpx;
    display:block;
    width:22rpx;
    height:26rpx;
}

.pay-box .sure-btn{
    padding:18rpx 0;
    border-radius:10rpx;
    margin-top:76rpx;
    width:58%;
    background:rgba(145,105,251,.5);
    border-radius:100rpx;
    margin:76rpx auto 0;
}

.authCode{
    position: absolute;
    right:0;
    top:0;
    bottom:0;
    margin:auto;
    width: 130rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    background:rgba(145,105,251,.5);
    font-size:24rpx;
    color:#fff;
    border-radius:8rpx;
}

.bg-deep{
    background:#9169FB!important;
}
