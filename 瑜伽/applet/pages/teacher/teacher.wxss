/* pages/teacher/teacher.wxss */
.container {
}

.main {
  background-color: #fff;
  box-sizing: border-box;
  position: relative;
  text-align: center;
}

.cover-bg {
  width:100%;
  height: 500rpx;
  border-radius: 10rpx;
}

.teacher-img {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
}

.name {
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 44rpx;
  color: #fff;
  margin-top: 16rpx;
}

.intro {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
}

.vertical-line {
  margin: 0 36rpx;
}

.good-at {
  position: relative;
  padding:50rpx 30rpx 0;
  background:#fff;
  text-align: left;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  margin-top: -80rpx;
  border-radius: 46rpx 46rpx 0px 0px;
}

.label {
  padding:2rpx 8rpx;
  background: #FF9D00;
  box-sizing: border-box;
  margin-right:16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 400;
  color:#fff;
  margin-bottom:30rpx;
}

.label:first-child{
  margin-left:40rpx;
}
.nav {
  display: flex;
  padding: 0 155rpx;
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 32rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav-item.active{
  color:#8F33FF;
}
.nav-line {
  width: 96rpx;
  height: 6rpx;
  background: #8F33FF;
  margin-top: 10rpx;
}

.divide {
  width: 100%;
  height: 2rpx;
  background: #E5E5E5;
  opacity: 1;
}
.categories {
  width: 750rpx;
  height: 134rpx;
  white-space: nowrap;
  display: flex;
  background-color: #fff;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
}
.date-item {
  display: inline-block;
  width: 101rpx;
  text-align: center;
}

.date-item .week {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  margin-bottom: 14rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.date-item .week-checked {
  color: #C7A9FF;
}

.date-item .date {
  font-size: 28rpx;
  font-family: SF Pro Display;
  color: #999999;
  width: 90rpx;
  height: 46rpx;
  line-height: 46rpx;
  border-radius: 60rpx;
}

.date-item .date-checked {
  background: rgba(199, 169, 255, 0.19);
  color: #C7A9FF;
}
.brief {
  padding:12rpx 30rpx 24rpx;
  text-align: left;
}

.brief .tit {
  height: 42rpx;
  color: #333333;
}

.brief .con {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: #666666;
  margin-top: 10rpx;
  min-height:40rpx;
}

.foot {
  padding: 24rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  background-color: #fff;
}

.foot.top{
  margin-top:0;
}
.scroll-view {
  height: 216rpx;
  padding: 0 24rpx;
  margin-top: 24rpx;
  white-space: nowrap;
}

.scroll-img {
  width: 196rpx;
  height: 100%;
  display: inline-block;
  border-radius: 10px;
  margin-right: 24rpx;
}

/* 团课 */
.lesson-item {
  position: relative;
  width: 702rpx;
  height: 336rpx;
  margin: 0 auto 24rpx;
  border-radius:16rpx;
}

.lesson-item .lesson-bg {
  width: 702rpx;
  height: 336rpx;
  border-radius:16rpx;
}
.lesson-item text{
  width: 196rpx;
  height: 42rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 42rpx;
  color: #FFFFFF;
  margin-left: 24rpx;
  opacity: 1;
}
.lesson-content {
  width: 702rpx;
  height: 336rpx;
  padding: 24rpx;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  z-index: 88;
  color: #fff;
}

.teacher {
  display: flex;
  align-items: center;
  margin-bottom: 52rpx;
}

.head-img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.lesson-name {
  line-height: 50rpx;
  height: 50rpx;
  font-size: 36rpx;
}

.lesson-time {
  margin-top: 8rpx;
  line-height: 40rpx;
  height: 40rpx;
  font-size: 30rpx;
}

.lesson-address {
  margin-top: 8rpx;
  line-height: 42rpx;
  height: 42rpx;
  font-size: 30rpx;
}


.full {
  background: #FF9387;
  z-index: 99;
}

.nervous {
  background: #FFD178;
}
.arranged{
  background-color: #FFA987;
}
.overdue{
  background-color: #9c9c9c;
}
/* 暂无排课 */
.nodata {
  margin-top: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nodata .no-lesson {
  width: 624rpx;
  height: 262rpx;
}

.nodata .tip1 {
  margin-top: 62rpx;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #000000;
}

.nodata .tip2 {
  margin-top: 18rpx;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
}

.nodata .experience {
  width: 420rpx;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  background: #21DBC3;
  margin-top: 70rpx;
  border-radius: 48rpx;
  text-align: center;
}
.noclass{
  width: 351rpx;
  height: 325rpx;
  margin: 24rpx auto 20rpx;
}
.nocourse{
  color: #999;
  text-align: center;
}
.evaluate{
  text-align: center;
  margin-top: 40rpx;
  color: #666;
}
.lesson-status {
  width: 124rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #0DBD47;
  opacity: 1;
  border-radius: 40px 0px 0px 40px;
  color: #fff;
  text-align: center;
  position: absolute;
  bottom: 0;
  top:30rpx;
  right: 0;
}
.full {
  background: #FA4F3B;
  z-index: 99;
}

.nervous {
  background: #FFBC0B;
}
.arranged{
  background-color: #FFA987;
}
.overdue{
  background-color: #9c9c9c;
}

.teacher-info{
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top:93rpx;
  left:0;
  right:0;
  margin:auto;
}
.box-shadow{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
  right:0;
  /* background:rgba(0,0,0,.5); */
  background: linear-gradient(180deg, rgba(235, 212, 212, 0.7) 0%, rgba(0, 0, 0, 0.7) 100%);
  
}

.nav-padding{
  padding:32rpx 30rpx 12rpx;
}

.navs {
  display: flex;
  padding: 18rpx 4rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius:40rpx;
}

.navs-item {
  white-space: nowrap;
  padding:0 46rpx;
  border-right: 2rpx solid #E8E8E8;
  display:flex;
  align-items: center;
}

.navs-item:last-child{
  border-right:none;
}

.navs-checked {
  color:#8F33FF!important;
  font-size:36rpx;
}

.trainer-item{
  border-radius:20rpx;
  background: url(https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/images/20210906/8b0c20a4ccab302097eb03efc990ef85.png) no-repeat;
  background-size: cover;
  margin-bottom:32rpx;
}
.trainer-item:last-child{
  margin-bottom:0;
}
.trainer-header{
  padding:34rpx 30rpx 20rpx;
}
.teacher-info-data .avatar{
  width:80rpx;
  height:80rpx;
  /* border:6rpx solid #fff; */
  border-radius:50%;
  margin-right:24rpx;
}
.teach-course{
  position: absolute;
  right:0;
  width:152rpx;
  height:46rpx;
  line-height: 46rpx;
  background:#FA4F3B;
  border-radius: 40px 0px 0px 40px;
  text-align: center;
}
.trainer-list{
  padding:26rpx 60rpx 26rpx 40rpx;
  border-top:4rpx dashed rgba(255,255,255,.3);
}
.trainer-list-item{
  margin-bottom:50rpx;
}
.trainer-list-item:last-child{
  margin-bottom:0;
}
.course-book{
  width:98rpx;
  height:34rpx;
  line-height: 34rpx;
  background:#9169FB;
  text-align: center;
  border-radius:24rpx;
}

.trainer-shadow{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.5);
  pointer-events: none;
  border-radius: 20rpx;
}
.overdue_style{
  background:#999;
}
.bg-shadow{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 0.68) 100%);
  border-radius:16rpx;
}
.course-stars{
  color:#FFBB38!important;
  letter-spacing: 2px;
  font-size:32rpx!important;
}
.course-start-time{
  position: absolute;
  bottom: 0;
  top: 37rpx;
  right: 156rpx;
}
.address-icon{
  width: 20rpx;
  height: 25rpx;
  margin-right:10rpx;
}