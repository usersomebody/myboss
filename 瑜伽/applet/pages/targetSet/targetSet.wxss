/* pages/targetSet/targetSet.wxss */
.vessel {
  height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

.title {
  height: 58rpx;
  font-size: 42rpx;
  line-height: 58rpx;
  color: #333333;
}

.icon {
  width: 264px;
  height: 264px;
  border-radius: 50%;
  margin: 10rpx auto 24rpx;
}

.number {
  text-align: center;
  height: 76rpx;
  font-size: 64rpx;
  line-height: 76rpx;
  color: #21DBC3;
}

.tips {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #D8D8D8;
  text-align: center;
  margin-top: 10rpx;
}
.scale{
  margin-top: 48rpx;
}
.reset {
  width: 702rpx;
  height: 96rpx;
  text-align: center;
  color: #fff;
  line-height: 96rpx;
  background: #21DBC3;
  border-radius: 48rpx;
  margin-top: 96rpx;
}
.cover{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.6);
}
.loading{
  position: fixed;
  top: 390rpx;
  left: 50%;
  z-index: 199;
  transform: translateX(-50%);
}
.loading-gif{
  width: 88rpx;
  height: 88rpx;
}
.loading-txt{
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #fff;
}