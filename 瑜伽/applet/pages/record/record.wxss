/* pages/record/record.wxss */
.container {
  position: relative;
  padding-bottom: 24rpx;
}

.header {
  height: 290rpx;
  background: linear-gradient(180deg, #21DBC3 0%, #9DF5EA 100%);
}

.circle-b {
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.circle-s {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  text-align: center;
  font-size: 42rpx;
  line-height: 160rpx;
  color: #21DBC3;
}

.calendar {
  min-height: 692rpx;
  background: #FFFFFF;
  padding: 48rpx 24rpx;
  box-sizing: border-box;
}

.yearMonth {
  display: flex;
  justify-content: center;
  align-items: center;
}

.yearMonth .switch-left{
  width:44rpx;
  height:44rpx;
  border-radius:10rpx;
  background: #F7F8FC;
  display:flex;
  justify-content: center;
  align-items: center;
}

.yearMonth .switch-left image{
  width:16rpx;
  height:24rpx;
}

.yearMonth .switch-left.left{
  transform: rotate(180deg)
}

.yearMonth .switch-img {
  width: 24rpx;
  height: 28rpx;
}

.yearMonth .con {
  margin: 0 32rpx;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #6B7897;
}

.week {
  display: flex;
  margin: 18rpx 0 14rpx;
  text-align: center;
  padding-left:30rpx;
}

.week-item {
  width: 84rpx;
  height: 44rpx;
  margin-right: 10rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color:#34485E;
}

.day {
  display: flex;
  text-align: center;
  flex-wrap: wrap;
  padding-left:30rpx;
}

.day .day-item {
  width: 84rpx;
  height: 84rpx;
  margin: 10rpx 10rpx 0 0;
  border-radius:50%;
  color: #7C86A2;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.day .day-num {
  height: 44rpx;
  font-size: 32rpx;
  line-height: 44rpx;
}

.day .day-weigh {
  height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
}

.last {
  margin-right: 0 !important;
}

.day .isToday {
  background-color: rgba(163,143,255,.5);
  color:#fff;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
}

.title .line {
  width: 4rpx;
  height: 44rpx;
  background: #21DBC3;
  border-radius: 2rpx;
  margin-right: 14rpx;
}

.data {
  margin-top: 14rpx;
  box-sizing: border-box;
}

.data .data-item {
  display:flex;
  align-items: center;
  margin-bottom: 24rpx;
  justify-content: space-between;
  padding: 14rpx 20rpx;
  box-sizing: border-box;
  background:#F8F5FF;
  border-radius:16rpx;
}

.data .data-item .data-l {
  padding-right: 48rpx;
  box-sizing: border-box;
}

.data .data-l .data-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin: 0 auto;
}

.data .data-l .time {
  height: 32rpx;
  line-height: 32rpx;
  margin-top: 10rpx;
  font-family: SF Pro Display;
  color: #999999;
}

.data .data-item .data-r {
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.data .data-r .info {
  flex: 1;
  display: flex;
  font-size: 24rpx;
  line-height: 34rpx;
}

.data .info .num {
  font-size: 42rpx;
  color: #333;
  margin-left:10rpx;
}

.data .data-r .height {
  margin-left: 64rpx;
}

.data .data-r .data-arrow {
  width: 16rpx;
  height: 28rpx;
}

.nodata {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 64rpx;
}

.nodata .nodata-bg {
  width: 290rpx;
  height: 208rpx;
  margin-bottom: 24rpx;
}

.nodata .tip {
  height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.cover {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;z-index: 999;
  background-color: rgba(0, 0, 0, 0.6);
}

.cover .content {
  width: 750rpx;
  height: 674rpx;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0px 0px;
  position: fixed;
  bottom: 0;
  padding: 96rpx 48rpx 0;
  box-sizing: border-box;
}

.cover .weigh {
  width: 150rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  background:#A38FFF;
  border-radius:10rpx;
  margin:0 auto;
}

.cover .scale {
  margin-top: 24rpx;
  position: relative;
  left: 0;
}

.cover .operate {
  display: flex;
  justify-content: space-between;
}

.cover .operate .btn {
  margin-top: 100rpx;
  width: 304rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border: 2rpx solid #9169FB;
  border-radius: 48rpx;
  font-size: 36rpx;
  color: #9169FB;
}

.cover .operate .confirm {
  color: #fff;
  background: #9169FB;
}
.show{
  visibility: visible;
}
.hide{
  visibility: hidden;
}

.record-list{
  padding:20rpx 30rpx;
  background:#fff;
  margin-top:20rpx;
  height:48vh;
}

.record-btn{
  width: 112rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: #9169FB;
  border-radius: 32rpx;
}

.record-list-time{
  height:40rpx;
  line-height: 40rpx;
}