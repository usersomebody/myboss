/* css3模型块 */

/* 小三角形 */
.triangle{
    position: absolute;
    right:28rpx;
    top:10%;
    bottom:0;
    margin:auto 0;
    width: 0;
    height: 0;
    border-left: 11rpx solid transparent;
    border-right: 11rpx solid transparent;
    border-bottom:10rpx solid transparent;
    border-top: 10rpx solid #282828;
  }
  .triangle.active{
    position: absolute;
    right:28rpx;
    top:-10%;
    bottom:0;
    margin:auto 0;
    width: 0;
    height: 0;
    border-left: 11rpx solid transparent;
    border-right: 11rpx solid transparent;
    border-top: 10rpx solid transparent;
    border-bottom: 10rpx solid #282828;
  }

  /* 文本对齐 */
  .text-center{
    text-align: center;
  }

  .text-left{
    text-align: left;
  }

  .text-right{
    text-align: right;
  }

  /* 划线 */
  .line-through{
    text-decoration:line-through
  }
  
  .ellipsis, .one-line {
    text-overflow: ellipsis;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    word-wrap: normal;
  }
  
  .ellipsisMulti, .two-line {
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }

