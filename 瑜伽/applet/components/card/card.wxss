/* components/card/card.wxss */
.container {
  width: 750rpx;
}

.categories {
  width: 750rpx;
  white-space: nowrap;
  display: flex;
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  padding: 24rpx 0 24rpx 0;
}

.categories .date-item {
  display: inline-block;
  text-align: center;
  width: 640rpx;
  height: 360rpx;
  /* background: linear-gradient(132deg, #F39D97 0%, #F8B1A9 100%); */
  opacity: 1;
  border-radius: 24rpx;
  margin-right: 24rpx;
  position: relative;
}

.categories .date-item .date_item_list .name {
  position: absolute;
  width: 96rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  opacity: 1;
  z-index: 2;
  top: 86rpx;
  left: 82rpx;
}

.categories .date-item .date_item_list .surplus_day {
  width: 192rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  opacity: 1;
  position: absolute;
  z-index: 2;
  left: 24rpx;
  bottom: 70rpx;
}

.bg1 {
  color: #c88707;
}
.bg2 {
  color: #df4b3e;
}
.bg3 {
  color: #5f82f1;
}
.bg4 {
  color: #8b8d9d;
}

.bgcolor1 {
  background-color: #fac154;
}
.bgcolor2 {
  background-color: #df4b3e;
}
.bgcolor3 {
  background-color: #5f82f1;
}
.bgcolor4 {
  background-color: #8b8d9d;
}

.categories .date-item .date_item_list .surplus_day text {
  padding: 0;
  margin: 0;
}

.categories .date-item .date_item_list .indate {
  width: 296rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  letter-spacing: 2rpx;
  opacity: 1;
  position: absolute;
  z-index: 2;
  left: 26rpx;
  bottom: 24rpx;
}

.categories .date-item .absolute_status {
  width: 150rpx;
  height: 70rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  text-align: center;
  line-height: 70rpx;
  border-radius: 0 24rpx;
  color: #FFFFFF;
}

.categories .date-item image {
  width: 640rpx;
  height: 360rpx;
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
}
