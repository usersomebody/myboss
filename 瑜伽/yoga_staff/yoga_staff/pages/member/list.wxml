<import src="../../components/loading/index.wxml" />

<view class="container">
    <view class="course-list">
        <view wx:if="{{list.length}}" class="list-item bg-white flex-box flex-a-center flex-j-between" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}" data-sid="{{item.store_id}}"  bindtap="goDetail">
            <view class="member-info">
                <image src="{{item.head_img}}"></image>
            </view>
            <view class="left">
                <view class="course-name color-333 font-lg">{{item.name}}</view>
                <view class="course-time color-666 font-md">{{item.phone}}</view>
            </view>
            <!-- <view class="right"><image src="../../imgs/arrow-r.png"></image></view> -->
        </view>
        <view wx:if="{{!list.length && isLast}}" class="no-list-data flex-box flex-a-center flex-j-center flex-v-type">
            <image src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/images/20220114/943cf471a8b467c4202b7c3ac4163426.png"></image>
            <view class="font-sm color-999">还没有员工信息~</view>
        </view>
    </view>
    <view hidden="{{isLast}}">
        <template is="loader" data="{{title:'加载中...'}}"></template>
    </view>
</view>
<view class="addVipCard" bindtap="goDetail" data-type="1">
    <image class="add-cover" src="https://qizhifan.oss-cn-hangzhou.aliyuncs.com/yoga/images/20211214/3a5abd6b221783c81aac8584f9069bc9.png"></image>
</view>