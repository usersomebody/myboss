<!-- 权限店铺列表 -->
<view class="container">
    <view wx:if="{{storeList.length}}" class="item-padding">
        <van-checkbox-group value="{{ checkedIds }}" bind:change="onChange">
            <view class="store-item" wx:for="{{storeList}}" wx:key="index" >
                <van-checkbox name="{{item.id}}" checked-color="#9B77F4" value-class="value-class">{{item.name}}</van-checkbox>
                <view wx:if="{{item.checked}}" class="user-roles flex-box flex-a-center flex-j-between" data-sid="{{item.id}}" data-sname="{{item.name}}" bindtap="addRole">
                    <view class="roles-title font-md flex-shrink">角色身份</view>
                    <view class="roles-list flex-box flex-a-center">
                        <block wx:if="{{item.checkName.length}}">
                            <view class="roles-name color-504 font-md" wx:for="{{item.checkName}}" wx:for-item="itm" wx:for-index="idx" wx:key="idx">{{itm}}</view>
                        </block>
                        <block wx:else>
                            <view class="roles-name color-666 font-md">选择角色类型</view>
                        </block>
                        <view class="right-icon"><image src="../../imgs/arrow-r.png"></image></view>
                    </view>
                </view>
            </view>
        </van-checkbox-group>

    </view>
    <view wx:else class="text-center font-md color-666" style="padding-top:60rpx;">暂无数据</view>
    <view class="submitBtn flex-box flex-a-center flex-j-center">
        <view class="btn back" bindtap="back">返回</view>
        <view class="btn sure" bindtap="sure">确定</view>
    </view>
</view>
