.container{
    background:#ECECEC;
}

.type-list .type-item{
    padding:30rpx 0;
    box-sizing: border-box;
}
.type-list  .type-item.active{
    padding:30rpx 0 24rpx;
    color:#8F33FF;
    border-bottom:6rpx solid #8F33FF;
}
.course-list .list-item{
    padding-left:30rpx;
}
.course-list .list-item .left{
    padding:30rpx 0;
    width:80%;
    border-bottom:1rpx solid #ECECEC;
}
.course-list .list-item .left .course-name{
    margin-bottom:30rpx;
}

.list-item .right image{
    width:10rpx;
    height:18rpx;
}

.add-course image{
    width:100rpx;
    height:100rpx;
    position: fixed;
    right:30rpx;
    bottom:60rpx;
}

.no-data-img{
    width:418rpx;
    height:360rpx;
    margin:0 auto 40rpx;
    padding-top:200rpx;
}
.add-cover{
    position: fixed;
    right:30rpx;
    bottom:200rpx;
    width:100rpx;
    height:100rpx;
}

.member-info image{
    width:80rpx;
    height:80rpx;
    border-radius:10rpx;
}

.no-list-data{
    padding-top:240rpx;
    margin:0 auto;
}
.no-list-data image{
    width:424rpx;
    height:360rpx;
