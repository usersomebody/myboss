.container{
    padding:24rpx 30rpx;
}

.booking-list{
    margin-top:20rpx;
}

.booking-item{
    background:#fff;
    margin-bottom:20rpx;
    border-radius:10rpx;
}

.booking-info{
    padding:30rpx 30rpx 42rpx 30rpx;
}
.booking-info .info{
    margin-left:62rpx;
}
.booking-info .info .item{
    margin-bottom:10rpx;
}

.booking-info .info .item:last-child{
    margin-bottom:0;
}

.booking-info .booking-avatar image{
    width:112rpx;
    height: 112rpx;
    border-radius: 50%;
    margin:0 auto;
}

.booking-btn{
    padding:22rpx 30rpx 22rpx 0;
    border-top:2rpx solid #F3F3F3;
}

.common-btn{
    width: 134rpx;
    height: 42rpx;
    line-height:42rpx;
    text-align: center;
    border-radius: 42rpx;
    background:#7D49FB;
    box-sizing: border-box;
}

.cancle{
    background: rgba(125, 73, 251, 0.1);
    border: 2rpx solid #7D49FB;
    color:#7D49FB;
    margin-right:34rpx;
}

.sign{
    color:#fff;
}
.booking-status image{
    position: absolute;
    right:26rpx;
    top:40%;
    transform: translateY(-50%);
    width:96rpx;
    height:88rpx;
}
.avatar-timing{
    margin-top:20rpx;
}