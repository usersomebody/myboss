.time-limit{
    padding:0 30rpx;
    background: #fff;
}
.use-time-title{
    padding:36rpx 30rpx;
}
.radio-item{
    padding:34rpx 0;
    border-bottom:1rpx solid #ececec;
}

.input-form{
    padding-left:46rpx;
}

.line-distance{
    margin:0 36rpx;
}

.date-cover .cover{
    width:38rpx;
    height:34rpx;
    margin-right:10rpx;
}
.limit-content{
    padding:30rpx 32rpx;
    background:#FCFBFF;
    border-radius:10rpx;
}
.limit-date-select{
    padding:24rpx 26rpx;
    border:1rpx solid #E6E6E6;
}
.color-504{
    color:#504766;
}
.limit-date-title{
    margin-bottom:24rpx;
}
.limit-date{
    margin-bottom:30rpx;
}
.week-item{
    width: 72rpx;
    height: 72rpx;
    line-height: 72rpx;
    background: #FFFFFF;
    border: 2rpx solid #ECECEC;
    border-radius: 8rpx;
    color:#666666;
    text-align: center;
    margin-right:10rpx;
}
.week-item:last-child{
    margin:0;
}
.week-item.active{
    background: #F2EEFF;
    border: 2rpx solid #9B77F4;
    color:#9169FB;
}

.booking-limit{
    padding-left:38rpx;
    background:#fff;
}
.input-box{
    width:20%;
}

.add-btn{
    margin-top:84rpx;
}
.add-btn .btn{
    width: 238rpx;
    height: 66rpx;
    line-height:66rpx;
    text-align: center;
    border-radius: 10rpx;
    background: #7D49FB;
}
.add-btn .cancle{
    border:2rpx solid #7D49FB;
    background:#fff;
    color:#7D49FB;
    margin-right:56rpx;
}
.select-r-b-icon{
    position: absolute;
    right:0;
    bottom:0;
    width:30rpx;
    height:30rpx;
}
.booking-limit-group{
    margin-top:24rpx;
    padding-left:38rpx;
}
.booking-limit-group image{
    width:32rpx;
    height:32rpx;
    margin-right:10rpx;
}
.clear-date-btn{
    position: absolute;
    right:0;
    top: 50%;
    transform: translateY(-50%);
}