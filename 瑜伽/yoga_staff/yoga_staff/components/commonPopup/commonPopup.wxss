/* 日期 */
.date{
    position: relative;
    margin-bottom:54rpx;
}
.date-self-box{
    width:505rpx;
    box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.16);
    margin-top:20rpx;
  }
  
  .calendar {
    min-height: 414rpx;
    background: #FFFFFF;
    padding: 48rpx 24rpx;
    box-sizing: border-box;
  }
  
  .yearMonth {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .yearMonth .switch-left{
    /* width:44rpx;
    height:44rpx; */
    border-radius:10rpx;
    background: #F7F8FC;
    display:flex;
    justify-content: center;
    align-items: center;
  }
  
  .yearMonth .switch-left image{
    width:8rpx;
    height:12rpx;
  }
  
  .yearMonth .switch-left.left{
    transform: rotate(180deg)
  }
  
  .yearMonth .switch-img {
    width: 24rpx;
    height: 28rpx;
  }
  
  .yearMonth .con {
    margin: 0 32rpx;
    height: 50rpx;
    font-size: 20rpx;
    line-height: 50rpx;
    color: #6B7897;
  }
  
  .week {
    display: flex;
    margin: 18rpx 0 14rpx;
    text-align: center;
  }
  
  .week-item {
    width: 84rpx;
    height: 48rpx;
    margin-right: 10rpx;
    font-size: 20rpx;
    line-height: 44rpx;
    color:#34485E;
    flex: 1;
  }
  
  .day {
    display: flex;
    text-align: center;
    flex-wrap: wrap;
  }
  
  .day .day-item {
    width: 12.3%;
    height: 48rpx;
    margin: 10rpx 10rpx 0 0;
    border-radius:50%;
    color: #7C86A2;
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .day .day-num {
    height: 44rpx;
    font-size: 20rpx;
    line-height: 44rpx;
  }
  
  .day .day-weigh {
    height: 34rpx;
    font-size: 24rpx;
    line-height: 34rpx;
  }
  
  .last {
    margin-right: 0 !important;
  }
  
  .day .isToday {
    background: rgba(120, 164, 250, 0.6);
    color:#fff;
  }
  
  .color-69{
    color:#698AFE;
  }

  .search-image-icon{
      position: absolute;
      left:20rpx;
      width:26rpx;
      height:26rpx;
      margin-right:20rpx;
  }
  .triggle{
    position: absolute;
    left: 36rpx;
    top: -14rpx;
    transform: rotate(135deg);
    width: 0;
    height: 0;
    border-top: 14rpx solid #fff;
    border-right: 14rpx solid #fff;
    border-bottom: 14rpx solid #fff;
    border-left: 14rpx solid #fff;
    filter: drop-shadow(2px 2px 2px rgba(0, 0, 0, .2));
  }
  
  .delete{
      width:20rpx;
      height:20rpx;
  }

  .date-time-picker{
    display:flex;
    align-items: center;
  }

.date-time-list{
    margin-right:100rpx;
}
.date-time-list swiper{
    width:200rpx;
    height:560rpx;
}

.date-time-list swiper-item{
    height:50%;
}
.time-line{
    position: absolute;
    top:80rpx;
    width:100%;
    height:1rpx;
    background:#f6f6f6;
}
.time-line.bottom{
    top:160rpx;
    width:100%;
    height:1rpx;
    background:#f6f6f6;
}
.color-ccc{
    color:#ccc;
}
