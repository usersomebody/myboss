.select{
    width:100%;
    height:100vh;
    position: absolute;
    left:0;
    top:80rpx;
    background:rgba(0,0,0,.7);
    z-index:99;
}
.container{
    background: #ffffff;
    padding-bottom:20rpx;
}

.select .content{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    background:#fff;
    padding:20rpx 30rpx;
    max-height:400rpx;
}

.select .content .li{
    width:30%;
    margin-right:5%;
    margin-bottom:26rpx;
    height:74rpx;
    line-height:74rpx;
    text-align: center;
    font-size:28rpx;
    border-radius:8rpx;
    color:#333;
    background:#F2F2F2;
    white-space: nowrap;
    box-sizing: border-box;
}

.select .content .li:nth-child(3n){
    margin-right:0;
}

.select .content .li.active{
    color:#FF8300;
    background: #FFF5EC;
    border: 1px solid #FF8300;
}

.btn{
    width:90%;
    border-radius:50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin:14rpx auto 0;
}

.btn .button{
    height:74rpx;
    line-height: 74rpx;
    width:50%;
    color:#fff;
    text-align: center;
}

.btn .clear{
    background:#FEBA5D;
    border-radius:100px 0px 0px 100px;
}

.btn .sure{
    background:#FF9D00;
    border-radius:0 100px 100px 0;
}
.style-two{
    width:30%!important;
}

.style-3{
    margin-right:0;
}
.style-4{
    margin-right:0;
}
.style-margin{
    margin-right:5%;
}
.scroll-height{
    height:300rpx;
}
.course-name-show{
    padding:20rpx 30rpx;
}
.one-line {
    text-overflow: ellipsis;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    word-wrap: normal;
  }