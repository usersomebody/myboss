
page{
    background-color: #ECECEC;
    
}
.order-container{
    height:100vh;
    background-color: #ECECEC;
    overflow-x: hidden;
}
.order-container.iphonex{
    height: calc(92vh - 68rpx)!important;
}
.margin-r-50{
    margin-right:50rpx;
}
.right-icon{
    width:12rpx;
    height:22rpx;
}
.receiving-address{
    width:92%;
    padding:30rpx 4%;
}
.address-detail{
    margin-top:16rpx;
}
.product-name{
    width:48%;
}
.product-price{
    margin-top:30rpx;
}
.product-cover{
    width:120rpx;
    height:120rpx;
    margin-right:20rpx;
}
.product-detail{
    padding:20rpx;
    margin:20rpx 0 30rpx;
}
.rule-icon{
    width:28rpx;
    height:28rpx;
    margin-right:14rpx;
}
.push-account .rule{
    padding:30rpx 28rpx;
}
.push-list{
    padding:22rpx 24rpx 0;
    margin-bottom:20rpx;
}
.radio-item{
    padding:30rpx 0;
    border-bottom:1rpx solid rgb(238, 238, 238);
}
.radio-item:last-child{
    border:none;
}
.free-sample-btn{
    width:77%;
    margin:200rpx auto;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: linear-gradient(rgba(252,86,57,255) 0%,rgba(252,132,57,255) 100%);
    border-radius: 70rpx;
}
.text-remark{
    width:91.5%;
    padding:20rpx 32rpx;
    height:160rpx;
}
.action-btn{
    width: 92%;
    position: fixed;
    bottom: 0;
    padding:12rpx 4%;
}
.action-btn .btn{
    width: 320rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    background: linear-gradient(rgba(252,86,57,255) 0%,rgba(252,132,57,255) 100%);
    border-radius: 64rpx;
}
.pd-68{
    padding-bottom:68rpx;
}