.product-container{
    height:100vh;
    background-color: #ECECEC;
}
.product-container.iphonex{
    height: calc(92vh - 68rpx)!important;
}
.swiper{
    height:750rpx;
}
.swiper .wx-swiper-dot{ 
    height: 12rpx;
    width: 12rpx;
    margin-top:-40rpx;
}

.swiper .wx-swiper-dot-active{
    width: 12rpx;
    height: 12rpx;
    border-radius: 6rpx;
    margin-top:-40rpx;
}

.categories image{
    width:100%;
    height:750rpx;
}
.product-info{
    padding:24rpx 25rpx 30rpx;
    border-bottom:1rpx solid rgba(244,244,244);
}
.commission{
    margin-right:75rpx;
}
.sample-rule{
    margin-right:75rpx;
}
.extend-info{
    padding:30rpx 25rpx 25rpx;
    margin-bottom:20rpx;
}
.extend-info .footer{
    margin-top:40rpx;
}
.margin-l-22{
    margin-left:22rpx;
}
.store-info{
    padding:20rpx 25rpx;
}
.store-cover{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    margin-right:25rpx;
}
.store-is-auth{
    padding:0 6rpx;
    background: rgb(255, 248, 243);
    margin-top:6rpx;
    display:inline-block;
}
.store-btn{
    width: 180rpx;
    height: 64rpx;
    line-height:64rpx;
    text-align: center;
    box-sizing: border-box;
    border: 1rpx solid rgb(153, 153, 153);
    border-radius: 46rpx;
}
.product-sku{
    padding:30rpx;
    margin:20rpx 0;
}
.product-sku .sku-title{
    margin-bottom:24rpx;
}
.product-sku .sku-item{
    margin-bottom:20rpx;
}
.action-btn{
    width: 92%;
    position: fixed;
    bottom: 0;
    padding:12rpx 4%;
}
.pd-68{
    padding-bottom:68rpx;
}
.btn-style1{
    width: 180rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    box-sizing: border-box;
    border: 2rpx solid rgb(252, 86, 57);
    border-radius: 64rpx;
    margin-right:30rpx;
}
.btn-style2{
    width: 320rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    background: linear-gradient(rgba(252,86,57,255) 0%,rgba(252,132,57,255) 100%);
    border-radius: 64rpx;
    color:#fff;
}
.btn-style3 .btn-style3-left{
    width: 160rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    background: rgb(252, 132, 57);
    border-radius: 64rpx 0px 0px 64rpx; 
    color:#fff;
}
.btn-style3 .btn-style3-right{
    width: 160rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    background: linear-gradient(rgba(252,86,57,255) 0%,rgba(252,132,57,255) 100%);
    border-radius: 0px 64rpx 64rpx 0px;
    color:#fff;
}
.product-detail-img-item{
    width:100%;
    margin-bottom:10rpx;
}
.back-icon{
    position: absolute;
    left:10rpx;
    width:56rpx;
    height:56rpx;
    z-index:99;
    padding:20rpx;
}
.sample-stock{
    margin-right:75rpx;
}
.line-through{
    text-decoration: line-through;
    margin-left:16rpx;
}
.product-sign{
    padding:0 6rpx;
    background: rgb(255, 248, 243);
    margin-left:20rpx;
}
.ratio-tips-img{
    width:28rpx;
    height:28rpx;
    margin-left:4rpx;
}
.ratio-tips{
    width:400rpx;
    position: absolute;
    top:-100rpx;
    left:-200rpx;
    padding:20rpx;
    border-radius:8rpx;
    background:#fff;
    text-align: center;
    box-shadow: 0px 10rpx 28rpx rgba(0, 0, 0, 0.05),0px 6rpx 16rpx rgba(0, 0, 0, 0.08),0px 3rpx 6rpx rgba(0, 0, 0, 0.12);
}