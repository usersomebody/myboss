page{
    background-color: #ECECEC;
    
}
.order-detail-container{
    height:100vh;
    background-color: #ECECEC;
}
.order-detail-container.iphonex{
    height: calc(92vh - 68rpx)!important;
}
.order-detail-banner{
    width: 100%;
    height: 400rpx;
    text-align: center;
    font-size: 40rpx;
    background: linear-gradient(rgba(252,132,57,255) 0%,rgba(252,86,57,255) 100%);
}
.order-list{
    padding:0 20rpx;
    margin-top:-82rpx;
}
.order-item{
    padding:20rpx 32rpx;
    border-radius:16rpx;
    background: #fff;
    margin-bottom:20rpx;
}
.store-img{
    width:48rpx;
    height:48rpx;
    margin-right:16rpx;
    border-radius:50%;
}
.order-detail{
    margin:34rpx 0 16rpx;
}
.order-detail .product-img{
    width:120rpx;
    height:120rpx;
    border-radius:4rpx;
    margin-right:22rpx;
}
.order-total{
    margin-bottom:30rpx;
}
.product-info .product-name{
    width:47%;
    margin-bottom:22rpx;
}

.order-info{
    padding:30rpx;
    margin-top:20rpx;
    border-radius:16rpx;
}

.order-title{
    margin-bottom:30rpx;
}
.detail-action{
    position: absolute;
    right:0;
    color:rgb(82, 103, 179);
}
.order-detail-item{
    margin-bottom:30rpx;
}
.detail-title{
    width:30%;
}
.detail-content{
    width:50%;
}
.action-btn{
    width: 92%;
    position: fixed;
    bottom: 0;
    padding:12rpx 4%;
    height:7vh;
}
.action-btn-item{
    width: 180rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    box-sizing: border-box;
    border: 2rpx solid rgb(204, 204, 204);
    border-radius: 46rpx;
    color:rgb(102, 102, 102);
    box-sizing: border-box;
}

.action-btn-item.btn-style-1{
    border:none;
    width: 180rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    color:#fff;
    background: linear-gradient(rgba(252,86,57,255) 0%,rgba(252,132,57,255) 100%);
    border-radius: 70rpx;
    margin-left:20rpx;
    box-sizing: border-box;
}
.pd-68{
    padding-bottom:68rpx;
}
.logisticsInfo{
    padding:38rpx 30rpx;
    border-radius:16rpx 16rpx 0px 0px;
}
.logisticsCompany{
    margin-bottom:60rpx;
}
.logisticsCompany .company .company-img{
    width:64rpx;
    height:64rpx;
    border-radius:50%;
}
.logisticsCompany .company .company-name{
    margin-left:20rpx;
    margin-right:10rpx;
}
.back-icon{
    position: absolute;
    left:10rpx;
    width:32rpx;
    height:32rpx;
    z-index:99;
    padding:20rpx;
}