.container{
    height:100vh;
}
.index-head{
    padding:0 0 0 24rpx;
    background: linear-gradient(rgba(252,132,57,255) 55.288%,rgba(255,107,43,255) 100%);
}
.search-input{
    width:340rpx;
    height:66rpx;
    line-height: 66rpx;
    border-radius:50rpx;
    background:#ECECEC;
    margin-left:20rpx;
    padding-left:22rpx;
}

.search-btn{
    margin-left:32rpx;
}

.placeStyle{
    color:#ccc;
    font-size:28rpx;
}
.search-icon{
    width:26rpx;
    height:26rpx;
    margin-right:24rpx;
    
}

.scroll-box{
    width:85%;
    white-space: nowrap;
}
.scroll-item{
    padding:22rpx 0;
    display:inline-block;
    color:#fff;
    margin-right:40rpx;
}
.scroll-item.active{
    border-bottom:2rpx solid #fff;
    font-weight:600;
}

.type-img-icon{
    width: 24rpx;
    height: 16rpx;
    position: absolute;
    right:24rpx;
    top: 30rpx;
}
.swiper{
    height:400rpx;
}
.swiper .wx-swiper-dot{ 
    height: 12rpx;
    width: 12rpx;
    margin-top:-40rpx;
}

.swiper .wx-swiper-dot-active{
    width: 12rpx;
    height: 12rpx;
    border-radius: 6rpx;
    margin-top:-40rpx;
}

.categories .banner-img{
    width:100%;
}

.product-container{
    padding: 24rpx 20rpx 20rpx;

}

.filter-container{
    margin-bottom:20rpx;
}
.filter-item{
    margin-right:40rpx;
}
.price-sort{
    width:32rpx;
    height:32rpx;
}
/* 产品样式 */
.product-info{
    width:50%;
}
.product-item{
    padding:18rpx;
    border-radius:8rpx;
    margin-bottom:20rpx;
}
.product-img{
    width:284rpx;
    height:284rpx;
    border-radius:8rpx;
    margin-right:20rpx;
}
.product-sign{
    padding:0 6rpx;
    background: rgb(255, 248, 243);
}
.product-name{
    margin-left:2%;
}
.product-price{
    margin:8rpx 0;
}
.product-original-price{
    margin-left:16rpx;
}
.product-intro{
    width:60%;
}
.product-action{
    margin-top:20rpx;
}
.product-btn{
    width: 140rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    background: linear-gradient(rgba(252,132,57,255) 0%,rgba(252,86,57,255) 100%);
    border-radius: 65rpx;
}
.product-commission-rule{
    padding:6rpx 14rpx;
    border-radius:8rpx;
    background: rgb(255, 248, 243);
    margin-top:8rpx;
}
.product_rule_img{
    width:24rpx;
    height:24rpx;
    margin-left:16rpx;  
}

.filter-sheet{
    padding:24rpx;
    flex-wrap: wrap;
}

.filter-sheet-item{
    width:30%;
    height:72rpx;
    line-height:72rpx;
    text-align: center;
    background: rgb(250, 250, 250);
    border-radius: 50px;
    margin:0 10rpx;
}
.filter-sheet-item:nth-child(3n-1){
    margin:20rpx 10rpx;
}
.filter-sheet-item.active{
    color:#fff;
    background: linear-gradient(rgba(252,86,57,255) 0%,rgba(252,132,57,255) 100%);
}
.back-icon{
    position: absolute;
    left:10rpx;
    width:56rpx;
    height:56rpx;
    z-index:99;
    padding:20rpx;
}
.inline-block{
    display:inline-block;
}
.line-through{
    text-decoration: line-through;
    margin-left:16rpx;
}