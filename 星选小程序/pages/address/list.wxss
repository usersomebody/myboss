.list-box{
    min-height:100vh;
}
.margin-r-50{
    margin-right:50rpx;
}
.right-icon{
    padding:10rpx;
    width:32rpx;
    height:32rpx;
}
.receiving-address{
    padding:30rpx;
    border-bottom: 1rpx solid rgb(239, 239, 239);
}
.address-detail{
    margin-top:16rpx;
}
.default-address{
    width: 68rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    background: linear-gradient(rgba(252,86,57,255) 0%,rgba(252,132,57,255) 100%);
    border-radius: 4rpx;
    margin-left:33rpx;
}
.free-sample-btn{
    width:77%;
    position: absolute;
    bottom:150rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: linear-gradient(rgba(252,132,57,255) 0%,rgba(252,86,57,255) 100%);
    border-radius: 70rpx;
}
.address-info{
    width:90%;
}
.no-data-bottom{
    bottom:300rpx;
}